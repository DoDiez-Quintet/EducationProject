<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Group" Class="mr-3 mb-n1"/>
            @header
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField @bind-Value="@user.FirstName" Label="Имя" ReadOnly="false"/>
        <MudTextField @bind-Value="@user.LastName" Label="Фамилия" ReadOnly="false"/>
        <MudTextField @bind-Value="@user.Email" Label="Эл. почта" ReadOnly="false"/>
        <MudTextField @bind-Value="@user.Password" 
                      Label="Пароль" 
                      Variant="Variant.Text" 
                      InputType="@PasswordInput" 
                      Adornment="Adornment.End" 
                      AdornmentIcon="@PasswordInputIcon" 
                      OnAdornmentClick="ShowHidePassword" 
                      AdornmentAriaLabel="Show Password" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Отмена</MudButton>
        <MudButton Color="Color.Primary" OnClick="UserAddUpdate">@addButtonText</MudButton>
    </DialogActions>
</MudDialog>